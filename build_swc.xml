<?xml version="1.0"?>
<flex-config>
  <compiler>
    <external-library-path append="true">
      <path-element>swc</path-element>
    </external-library-path>
    
    <source-path>
      <path-element>src</path-element>
    </source-path>
  </compiler>

  <include-classes>
      <class>flails.resource.AbstractResource</class>
      <class>flails.resource.RailsResource</class>
      <class>flails.resource.JavaScriptResource</class>
      <class>flails.resource.IResource</class>
      <class>flails.resource.mxml.Resource</class>
      <class>flails.request.RequestConfig</class>
      <class>flails.request.RequestParam</class>
      <class>flails.request.JSONFilter</class>
      <class>flails.clients.HTTPClientBase</class>
      <class>flails.clients.RailsClient</class>
      <class>flails.clients.JavaScriptClient</class>
      <class>flails.resource.Record</class>
  </include-classes>

  <metadata>
    <creator>Lance Carlson</creator>
    <description>http://github.com/lancecarlson/flails</description>
    <language>EN</language>
    <title>Flex + Rails framework</title>
  </metadata>

  <output>pkg/flails-0.1.swc</output>
</flex-config>
